@import "../tpls/base.wxss";

.my-container {
  background-color: #ededed;
}

.my-order {
  margin-top: 10px;
  /*border-bottom: 1rpx solid #EDEDED;*/
}

.item-title {
  padding: 25rpx 0;
  color: #999;
  text-align: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 28rpx;
  background-color: #fff;
  position: relative;
}

.item-title image {
  position: absolute;
  transform: rotate(270deg);
  height: 48rpx;
  width: 48rpx;
  right: 10rpx;
}

.order-item {
  margin-bottom: 15rpx;
  color: #777;
  background-color: #fff;
  font-size: 28rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-header {
  margin-left: 30rpx;
  border-bottom: 1rpx solid #ededed;
  padding: 25rpx 0;
}

.order-header text:last-child {
  margin-left: 10rpx;
}

.order-main {
  display: flex;
  height: 150rpx;
  color: #6d6d6d;
  padding: 20rpx 30rpx;
}

.order-main .item-left {
  flex-basis: 150rpx;
  height: 100%;
  /*width: 150rpx;
  height: 150rpx;*/
  background-color: #f5f6f5;
  border-radius: 4rpx;
}

.order-main .item-left image {
  /*height: 100%;
  width: 100%;*/
   width: 150rpx;
  height: 150rpx;
}

.order-main .item-middle {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-main .item-middle view {
  margin: 10rpx 0;
}

.order-main .item-right {
  display: flex;
  flex-basis: 120rpx;
  align-items: center;
  justify-content: flex-end;
}

.order-bottom {
  margin-left: 30rpx;
  border-top: 1rpx solid #ededed;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #2f2f2f;
}

.order-bottom .pay {
  width: 170rpx;
  height: 60rpx;
  margin-right: 30rpx;
  background-color: #b42f2d;
  border-radius: 4rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.order-bottom .pay:active {
  background-color: #9a211f;
}

.no-data {
  background: #fff;
}
